<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shopify_account_url) %>:</strong></dt>
  <dd><%= @account.shopify_account_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shopify_api_key) %>:</strong></dt>
  <dd><%= @account.shopify_api_key %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shopify_password) %>:</strong></dt>
  <dd><%= @account.shopify_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shopify_shared_secret) %>:</strong></dt>
  <dd><%= @account.shopify_shared_secret %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
